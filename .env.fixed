# ===== 修复后的环境变量配置 =====

# Django 核心配置
SECRET_KEY=django-insecure-change-this-key-in-production-environment-now
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=CardVerification.settings

# 数据库配置（使用独立变量，不使用DATABASE_URL）
POSTGRES_DB=cardverification
POSTGRES_USER=cardverification
POSTGRES_PASSWORD=strongpassword123
DB_HOST=db
DB_PORT=5432

# Redis 配置
REDIS_PASSWORD=redispassword123

# 超级用户配置
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=adminpassword123

# 应用配置
SYSTEM_NAME="Killua Card System"
SYSTEM_VERSION=1.0.0
SYSTEM_DESCRIPTION="Professional Card Verification System"

# 生产环境优化
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=60

# 时区配置
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# 安全配置
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Session 配置
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=86400

# CSRF 配置
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
