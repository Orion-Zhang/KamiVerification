# ===== Django 配置 =====
# 调试模式 (生产环境设置为 0)
DEBUG=1

# 密钥 (生产环境请更换为随机字符串)
SECRET_KEY=django-insecure-^iq$@6z+n=nhmdx0)9vx8w9o85ls=+%bz9p&qd79$3=+_#!jbo

# 允许的主机 (生产环境请设置实际域名)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===== 数据库配置 =====
# PostgreSQL 数据库配置
POSTGRES_DB=cardverification
POSTGRES_USER=cardverification
